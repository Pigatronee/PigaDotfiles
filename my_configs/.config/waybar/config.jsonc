        //"format-linked": "{ifname} (No IP) Ôûñ",
        //"format-disconnected": "Disconnected ‚ö†",
        //"format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "~/.config/waybar/scripts/network-launch.sh"
    },
   "bluetooth": {
        "format": "{icon}",
           "menu": "on-click",
           "menu-file": "~/.config/waybar/menus/bluetooth_menu.xml",
           "menu-actions": {
            "devices": "kitty",
           },
           "format-icons": {
                "enabled": "Ôäî",
                "disabled": ""
            },
            //"tooltip-format": "{}"
    },
    "custom/power": {
    "format" : "‚èª",
        "tooltip": false,
        "menu": "on-click",
